extends layout

block search
  base(href='/')
  .container.wrapper(ng-app='SearchModule' ng-controller='searchdhController')
    .row.content
      .col-lg-3.content-left
        md-toolbar.md-whiteframe-2dp
          .md-toolbar-tools
            h4.chutrang 
              i.fa.fa-search
              |   Tìm kiếm
        md-content.md-whiteframe-2dp(flex='', layout-padding='')
          div.form-inline.xanhnhat
            md-subheader
              i.fa.fa-calendar.padright.xanhnhat 
              | Ngày
              i.fa.fa-warning.pull-right.padright.xanhnhat
                md-tooltip(md-direction="left")
                  | Thay đổi ngày sẽ mất các lựa chọn hiện tại
            .form-inline
              .form-group
                input#ngaybd.marleft.form-control.timewidthhalf.dpindex(type='text', name='ngay', placeholder='Chọn ngày', readonly='readonly', autocomplete='off', ng-model='data.ngaybd')

                input#ngaykt.form-control.timewidthhalf.dpindex(type='text', name='ngay', placeholder='Chọn ngày', readonly='readonly', autocomplete='off', ng-model='data.ngaykt')
          div.form-inline.xanhnhat
            md-subheader
              i.fa.fa-clock-o.padright.xanhnhat 
              | Giờ
              i.fa.fa-warning.pull-right.padright.xanhnhat
                md-tooltip(md-direction="left")
                  | Thay đổi giờ sẽ mất các lựa chọn hiện tại
          .form-inline
            .form-group
              select#giobd_sl.timewidthhalf.form-control.marleft.sb.fixWTime.selectpicker(ng-model="data.giobd1" ng-options="obj.id as obj.name for obj in data.availableOptions" ng-change='change_time_bd(data.giobd1, "{{data.giobd1}}")')
                option(value='' disabled) Từ giờ
              input#gbdnh.form-control.sb(type='hidden', name='giobd1', value='{{data.giobd1}}')

              select#giokt_sl.timewidthhalf.form-control.sb.fixWTime.selectpicker(ng-model="data.giokt1" ng-options="obj.id as obj.name for obj in data.availableOptions")
                option(value='' disabled) Đến giờ
              input#gktnh.form-control.sb(type='hidden', name='giokt1', value='{{data.giokt1}}')
          // số năm kinh nghiệm ---------------------------------------------------
          div.form-inline
            div.xanhnhat
              md-subheader
                i.fa.fa-briefcase.padright.xanhnhat 
                | Kinh Nghiệm
            md-radio-group(ng-model='data.sonamkn')
              div(ng-repeat='kn in kinhnghiems')
                md-radio-button(value='{{kn.id}}')
                  {{kn.ten}}
          // dịch vụ ---------------------------------------------------
          div.form-inline
            div.xanhnhat
              md-subheader
                i.fa.fa-tags.padright.xanhnhat 
                | Dịch vụ
            div(ng-repeat='tieuchi in tieuchis')
              md-checkbox.md-primary.md-align-top-left(ng-model='tieuchi.data' ng-click='them_filter_dichvu(tieuchi.ten, tieuchi.data, data)')
                | {{tieuchi.ten}}
          // Quận ---------------------------------------------------
          div.form-inline
            div.xanhnhat
              md-subheader
                i.fa.fa-map-marker.padright.xanhnhat 
                | Quận
                i.fa.fa-warning.pull-right.padright.xanhnhat
                  md-tooltip(md-direction="left")
                    | Thay đổi quận sẽ mất các lựa chọn hiện tại
            md-radio-group(ng-model='data.quan')
              div(ng-repeat='quan in quans')
                md-radio-button(value='{{quan.ten}}')
                  {{quan.ten}}
      .col-lg-9.content-right
        md-button.md-fab.md-primary.chutrang(aria-label='Use Android' ng-click='addEvent()')
        div.tabmartop(ui-calendar="uiConfig.calendar" ng-model="eventSources" ng-init='initLanguage()')