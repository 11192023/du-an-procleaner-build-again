                        i.fa.fa-remove.xanhnhat
                    md-list-item
                      img.md-avatar(alt='', ng-src='img/ngv/16457896/avatar.jpg')
                      p Le van thang
                      md-button.md-icon-button(aria-label='More')
                        i.fa.fa-remove.xanhnhat
                    md-divider
          div.modal-footer