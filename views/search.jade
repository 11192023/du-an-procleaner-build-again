extends layout

block search
  base(href='/')
  .container.wrapper(ng-app='SearchModule')
    .row.content(ng-controller='timeController')
      .col-lg-3.content-left
        h4 Tìm kiếm
          div.form-inline.xanhnhat
            h4.i.fa.fa-calendar.padright.xanhnhat 
            | Ngày
            div
              input#ngay.marleft.form-control.timewidth.dpindex(type='text', name='ngay', placeholder='Chọn ngày', readonly='readonly', autocomplete='off')
          div.form-inline.xanhnhat
            h4.i.fa.fa-clock-o.padright.xanhnhat 
            | Giờ
          .form-inline
            .form-group
              select.timewidthhalf.form-control.marleft.sb.fixWTime.selectpicker(ng-model="data.giobd1" ng-options="obj.id as obj.name for obj in data.availableOptions")
                option(value='' disabled) Từ giờ
              input#gbdnh.form-control.sb.typeahead(type='hidden', name='giobd1', value='{{data.giobd1}}')

              select.timewidthhalf.form-control.sb.fixWTime.selectpicker(ng-model="data.giokt1" ng-options="obj.id as obj.name for obj in data.availableOptions")
                option(value='' disabled) Đến giờ
              input#gktnh.form-control.sb.typeahead(type='hidden', name='giokt1', value='{{data.giokt1}}')
          // số năm kinh nghiệm ---------------------------------------------------
          div.form-inline
            div.xanhnhat
              h4.i.fa.fa-tags.padright.xanhnhat 
              | Kinh Nghiệm
            md-radio-group(ng-model='data.sonamkn')
              div(ng-repeat='kn in kinhnghiems')
                md-radio-button(value='{{kn.id}}')
                  {{kn.ten}}
          // dịch vụ ---------------------------------------------------
          div.form-inline
            div.xanhnhat
              h4.i.fa.fa-tags.padright.xanhnhat 
              | Dịch vụ
            div(ng-repeat='tieuchi in tieuchis')
              md-checkbox.md-primary.md-align-top-left(ng-model='tieuchi.data' ng-click='get_filter_dichvu(tieuchi.ten, tieuchi.data)')
                | {{tieuchi.ten}}
          // Quận ---------------------------------------------------
          div.form-inline
            div.xanhnhat
              h4.i.fa.fa-tags.padright.xanhnhat 
              | Quận
            md-radio-group(ng-model='data.quan')
              div(ng-repeat='quan in quans')
                md-radio-button(value='{{quan.ten}}')
                  {{quan.ten}}
      .col-lg-9.content-right
        h4 Danh sách người giúp việc
        div.loading(ng-show='loading')
        div(ng-repeat='ngv in ngvs' ng-show='filtering(ngv.sotruong, ngv.sonamkinhnghiem, ngv.diachi.quan)')
          .row.selected-classifieds
            .col-md-3
              a(href='#')
                img.img-responsive(src='{{"img/ngv/" + ngv.hinhanh}}', alt='')
            .col-md-9
              h3 {{ngv.hoten}}
              h4 {{ngv.sonamkinhnghiem + ' năm kinh nghiệm'}}
              h4 {{ngv.diachi.quan}}
              p(ng-repeat='st in ngv.sotruong') {{st}}
              a.btn.btn-danger.pull-right(ng-href='/ngv_chitiet/1' target="_self")
                | View Project 
                span.glyphicon.glyphicon-chevron-right
            hr
    // /Content