extends layout

block search
  base(href='/')
  .container.wrapper(ng-app='SearchModule')
    .row.content.vdivide(ng-controller='timeController')
      .col-lg-3.content-left
        md-toolbar.md-whiteframe-2dp
          .md-toolbar-tools
            h4.chutrang.center Tìm kiếm
        md-content.md-whiteframe-2dp(flex='', layout-padding='')
          div.form-inline.xanhnhat
            md-subheader
              i.fa.fa-calendar.padright.xanhnhat 
              | Ngày
            div
              input#ngay.marleft.form-control.timewidth.dpindex(type='text', name='ngay', placeholder='Chọn ngày', readonly='readonly', autocomplete='off', ng-model='data.ngay' ng-change='filter_ngaygio($event)')
          div.form-inline.xanhnhat
            md-subheader
              i.fa.fa-clock-o.padright.xanhnhat 
              | Giờ
          .form-inline
            .form-group
              select.timewidthhalf.form-control.marleft.sb.fixWTime.selectpicker(ng-model="data.giobd1" ng-options="obj.id as obj.name for obj in data.availableOptions" ng-change='filter_ngaygio($event)')
                option(value='' disabled) Từ giờ
              input#gbdnh.form-control.sb.typeahead(type='hidden', name='giobd1', value='{{data.giobd1}}')

              select.timewidthhalf.form-control.sb.fixWTime.selectpicker(ng-model="data.giokt1" ng-options="obj.id as obj.name for obj in data.availableOptions" ng-change='filter_ngaygio($event)')
                option(value='' disabled) Đến giờ
              input#gktnh.form-control.sb.typeahead(type='hidden', name='giokt1', value='{{data.giokt1}}')
          // số năm kinh nghiệm ---------------------------------------------------
          div.form-inline
            div.xanhnhat
              md-subheader
                i.fa.fa-tags.padright.xanhnhat 
                | Kinh Nghiệm
            md-radio-group(ng-model='data.sonamkn')
              div(ng-repeat='kn in kinhnghiems')
                md-radio-button(value='{{kn.id}}')
                  {{kn.ten}}
          // dịch vụ ---------------------------------------------------
          div.form-inline
            div.xanhnhat
              md-subheader
                i.fa.fa-tags.padright.xanhnhat 
                | Dịch vụ
            div(ng-repeat='tieuchi in tieuchis')
              md-checkbox.md-primary.md-align-top-left(ng-model='tieuchi.data' ng-click='get_filter_dichvu(tieuchi.ten, tieuchi.data)')
                | {{tieuchi.ten}}
          // Quận ---------------------------------------------------
          div.form-inline
            div.xanhnhat
              md-subheader
                i.fa.fa-map-marker.padright.xanhnhat 
                | Quận
            md-radio-group(ng-model='data.quan')
              div(ng-repeat='quan in quans')
                md-radio-button(value='{{quan.ten}}')
                  {{quan.ten}}
      .col-lg-9.content-right
        h3.md-headline Danh sách người giúp việc
        div.loading(ng-show='loading')
        div.removedot
          ul
            li(ng-repeat='ngv in ngvs' ng-show='filtering(ngv.sotruong, ngv.sonamkinhnghiem, ngv.diachi.quan)')
              md-card
                md-card-content
                  .row.selected-classifieds  
                    .col-md-12
                      h3.ngv_name {{ngv.hoten}}
                  .row.selected-classifieds
                    .col-md-3
                      a(href='#')
                        img.img-responsive(src='{{"img/ngv/" + ngv.hinhanh}}', alt='')
                      .rating
                        i.fa.fa-2x.fa-star.xanhnhat
                        i.fa.fa-2x.fa-star.xanhnhat
                        i.fa.fa-2x.fa-star.xanhnhat
                        i.fa.fa-2x.fa-star-o.xanhnhat
                        i.fa.fa-2x.fa-star-o.xanhnhat
                    .col-md-9
                      .rightbody
                        .row
                          .itembody.left
                            h4.i.fa.fa-venus-mars.padright.xanhnhat 
                            | Nam
                          .itembody.right 
                            h4.i.fa.fa-birthday-cake.padright.xanhnhat
                            | {{tinh_tuoi_ngv(ngv.ngaysinh)}}
                        .row
                          .itembody.left 
                            h4.i.fa.fa-clock-o.padright.xanhnhat
                            | {{ngv.sonamkinhnghiem + ' năm kinh nghiệm'}}
                          .itembody.right 
                            h4.i.fa.fa-map-marker.padright.xanhnhat
                            | {{ngv.diachi.quan}}
                        div.form-group
                          h4.i.fa.fa-tags.padright.xanhnhat
                          | Sở trường
                          br
                          input.btn.btn-danger.btn-xs.tagmargin(ng-repeat='st in ngv.sotruong' type='button' value='{{st}}')
                      .rightfooter
                        a.btn.btn-danger.pull-right(ng-href='/ngv_chitiet/1' target="_self")
                          | Thông tin chi tiết
                          span.glyphicon.glyphicon-chevron-right
    // /Content